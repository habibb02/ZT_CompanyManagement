@model IEnumerable<CompanyManagement.Models.SupplierViewModel>
@{
    ViewBag.Title = "Find Suppliers";
}

<h1 class="jumbotron">FIND CUSTOMERS</h1>

@using (Html.BeginForm("SearchSupplier", "Supplier"))
{

    <div class="form-group">
        @Html.Label("Supplier Name", new { @class = "control-label col-xs-0" })
        <div class="row">
            <div class="col-xs-2">
                @Html.TextBox("SupplierName", "", new { @class = "form-control" })
            </div>
            <div class="col-xs-0">
                <button type="submit" class="btn btn-primary glyphicon glyphicon-search"></button>
            </div>
        </div>
    </div>
}
<table class="table">
    <tr>
        <th></th>
        <th>@Html.DisplayNameFor(model => model.Name)</th>

        <th>@Html.DisplayNameFor(model => model.Phone)</th>

        <th>@Html.DisplayNameFor(model => model.Email)</th>

        <th>@Html.DisplayNameFor(model => model.Address)</th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>Supplier not found.</tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td></td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>

                <td>@Html.DisplayFor(modelItem => item.Phone)</td>

                <td>@Html.DisplayFor(modelItem => item.Email)</td>

                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td></td>
            </tr>
        }
    }
</table>
