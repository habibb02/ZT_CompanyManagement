@model CompanyManagement.Models.SupplierViewModel
@{
    ViewBag.Title = "Edit Supplier";
}

<button type="button" class="glyphicon glyphicon-edit btn btn-primary" data-toggle="modal" data-target="#EditModal@(Model.IdSupplier)">
</button>

<div class="modal fade" id="EditModal@(Model.IdSupplier)" tabindex="1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3>EDIT CUSTOMER</h3>
            </div>
            <div class="modal-body">
                <div>
                    @using (Html.BeginForm("_EditSupplier"))
                    {
                        @Html.AntiForgeryToken()

                        <dl class="dl-horizontal">
                            <div class="form-group">
                                <dt>
                                    @Html.ValidationSummary(true)
                                    @Html.HiddenFor(model => model.IdSupplier)
                                    @Html.LabelFor(model => model.Name, new { @class = "control-label col-xs-2" })
                                </dt>
                                <dd>
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Name)
                                </dd>
                            </div>
                            <div class="form-group">
                                <dt>
                                    @Html.LabelFor(model => model.Phone, new { @class = "control-label col-xs-2" })
                                </dt>
                                <dd>
                                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Phone)
                                </dd>
                            </div>
                            <div class="form-group">
                                <dt>
                                    @Html.LabelFor(model => model.Email, new { @class = "control-label col-xs-2" })
                                </dt>
                                <dd>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Email)
                                </dd>
                            </div>
                            <div class="form-group">
                                <dt>
                                    @Html.LabelFor(model => model.Address, new { @class = "control-label col-xs-2" })
                                </dt>
                                <dd>
                                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Address)
                                </dd>
                            </div>
                        </dl>
                        <div class="modal-footer">
                            <div class="form-actions no-color">
                                <input type="submit" value="Update" class="btn btn-success" />
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


