@model IEnumerable<CompanyManagement.Models.SuppliedProductViewModel>

@{
    ViewBag.Title = "Inserimento prodotti forniti";
}

<h1 class="jumbotron" style="color:white">PRODUCTS SUPPLY</h1>
<table class="table table-striped">
    <tr>
        <th></th>
        <th>@Html.DisplayName("Product")</th>

        <th>@Html.DisplayName("Supplier")</th>

        <th>@Html.DisplayNameFor(model => model.Price)</th>

        <th>@Html.DisplayNameFor(model => model.Date)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td></td>
            <td>@Html.DisplayFor(modelItem => item.Product.Name)</td>

            <td>@Html.DisplayFor(modelItem => item.Supplier.Name)</td>

            <td>@Html.DisplayName("€ " + item.Price.ToString())</td>

            <td><p>@Html.DisplayFor(modelItem => item.Date)</p></td>
            <td>
                @Html.Action("_DeleteSuppliedProduct", new { IdSupplier = item.IdSupplier, IdProduct = item.IdProduct })
                @Html.Action("_EditSuppliedProduct", new { IdSupplier = item.IdSupplier, IdProduct = item.IdProduct })
            </td>
        </tr>
    }
</table>
<div class="form-group col-xs-offset-9">
    @Html.Action("_AddSuppliedProduct")
</div>
