@model CompanyManagement.Models.OrdersViewModel


<div id="OrderProduct@(Model.OrderProduct.Count-1)" class=" form-group">
    <div class="col-xs-6">
        @Html.DropDownListFor(model => model.OrderProduct[Model.OrderProduct.Count - 1].IdProduct, Model.ProductsList, " ", new { @class = "form-control" })
    </div>
    <div class="col-xs-4">
        @Html.TextBoxFor(model => model.OrderProduct[Model.OrderProduct.Count - 1].Qty, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.OrderProduct[Model.OrderProduct.Count - 1].Qty)
    </div>
    <div class="col-xs-2">
        <button type="button" onclick="removeOrderProduct('OrderProduct@(Model.OrderProduct.Count-1)','OrderProduct_@(Model.OrderProduct.Count-1)__Qty')" class="btn glyphicon glyphicon-minus btn-danger" data-toggle="modal" data-target=""></button>
    </div>
</div>
